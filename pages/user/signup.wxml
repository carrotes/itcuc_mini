
    <template name='signup'>
        <form bindsubmit='signup'>
        <view class="weui-cells__title">登录名</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="uname" placeholder="请输入登录名" />
                </view>
            </view>
        </view>
        <view class="weui-cells__title">邮箱</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="uemail" placeholder="请输入邮箱" />
                </view>
            </view>
        </view>
        <view class="weui-cells__title">密码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="upwd" type='password' placeholder="请输入密码" />
                </view>
            </view>
        </view>
        <button class="weui-btn" type="default" bindtap='toSignin'>已有账号 登陆</button>
        <button class="weui-btn" type="primary" form-type='submit'>注册</button>
        </form>
    </template>